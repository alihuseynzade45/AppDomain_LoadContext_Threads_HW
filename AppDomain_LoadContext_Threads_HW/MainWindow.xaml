<Window xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  x:Class="AppDomain_LoadContext_Threads_HW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDomain_LoadContext_Threads_HW"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="800">
    <Grid>
        <Label Margin="0,0,700,300" Height="50" Width="120" Content="From" FontSize="30"></Label>
        <TextBox x:Name="TBFrom" Margin="0,0,200,300" Height="80" Width="350" FontSize="50"></TextBox>
        <Label Margin="0,0,700,0" Height="50" Width="120" Content="To" FontSize="30"></Label>
        <TextBox x:Name="TBTo" Margin="0,0,200,0" Height="80" Width="350" FontSize="50"></TextBox>
        <ProgressBar x:Name="ProgressBar" Margin="0,200,0,0"  Height="50" Width="700" ></ProgressBar>
        <Button Margin="500,0,0,300" Height="70" Width="150" Content="Open" FontSize="30" Click="FromOpen_Click"></Button>
        <Button Margin="500,0,0,0" Height="70" Width="150" Content="Open" FontSize="30" Click="ToOpen_Click"></Button>
        <Button Margin="500,340,0,0" Height="70" Width="150" Content="Start" FontSize="30" Click="Start_Click"></Button>
        

    </Grid>
</Window>
